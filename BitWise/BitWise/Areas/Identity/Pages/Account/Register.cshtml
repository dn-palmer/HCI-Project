@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="row align-items-center">
    <div class="col-md-12">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="align-content-center">Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label class="pb-2">Email</label>
            <div class="form-floating">
               
                <input asp-for="Input.Email" id="email" class="form-control" autofocus   autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <label  class="pb-2">Password</label>
            <div class="form-floating">
                <input asp-for="Input.Password" id="password" class="form-control"  autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password" >Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <label  class="pb-2">Confirm Password</label>
            <div class="form-floating pb-4">
                <input asp-for="Input.ConfirmPassword" id="confirm" class="form-control"  autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary pt-2">Register</button>
        </form>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
